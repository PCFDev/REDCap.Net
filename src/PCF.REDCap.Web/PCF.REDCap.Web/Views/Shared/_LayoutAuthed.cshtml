<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/combined.css")
    @Scripts.Render("~/bundles/modernizr.js")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="_navbar-collapse _collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" id="logout">Logout</a></li>
                </ul>
                @*<span class="navbar-form navbar-right">
                    <button type="button" class="btn btn-default" id="logout">Logout</button>
                </span>*@
            </div>
        </div>
    </div>
    <div class="container body-content" id="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/combined.js")
    @RenderSection("scripts", required: false)
</body>
</html>
