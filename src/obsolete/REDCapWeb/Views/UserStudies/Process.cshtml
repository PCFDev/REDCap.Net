@model REDCapWeb.Process

<h2>@ViewBag.Title</h2>

<div>
    <h4>@Model.UserStudy.StudyName</h4>
    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserStudy.KeyFormName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserStudy.KeyFormName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserStudy.KeyFormName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserStudy.KeyFieldName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserStudy.KeyFieldName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserStudy.KeyFieldName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                Form
            </th>
            <th>
                Field Names
            </th>
        </tr>
        @foreach (var item in Model.FormMetadata)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FormName)
                </td>
                <td>
                    <ul>
                        @foreach (var fields in item.FieldData)
                        {
                            <li>@fields.FieldName : @fields.FieldLabel</li>
                        }
                    </ul>

                </td>
            </tr>
        }
    </table>

</div>